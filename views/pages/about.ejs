<body id="about-body">
    <% include ../partials/nav-inner.ejs %>

    <div class="about-background">
    	<div id="abouttitle-box" class="center-wrapper col-md-12">
    			<div class="title-line">
    				<h1>ABOUT THE</h1>
    				<span class="title-line-two">PROJECT</span>
