  <script>var mixer = mixitup('#team-photos');</script>
  <script>
  var figure = $(".about-video").hover( hoverVideo, hideVideo );
  function hoverVideo(e) {
      $('video', this).get(0).play();
  }
  function hideVideo(e) {
      $('video', this).get(0).pause();
      $('video', this).get(0).currentTime = 0;
      // Current time function idea from https://stackoverflow.com/questions/10457750/reset-a-video-on-mouse-out-using-html5-and-javascript
  }
  </script>
</body>
</html>
